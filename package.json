{
  "name": "kure_kosen_map",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:kure-kosen/kure_kosen_map.git",
  "author": "kobakakzu0429 <kobakazu10@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier-eslint --write \"src/assets/js/**/*.js\"",
    "sass": "yarn build-css && yarn autoprefixer",
    "sass-w": "yarn watch-css & yarn watch-autoprefixer",
    "cssmin": "yarn release-css && yarn autoprefixer",
    "build-css": "node-sass --include-path scss src/assets/_scss/import.scss src/assets/css/build.css --output-style expanded --indent-type space --indent-width 2 --source-comments",
    "release-css": "node-sass --include-path scss _sass/styles.scss common/css/styles.css --output-style compressed",
    "watch-css": "nodemon -e scss -x \"yarn build-css \"",
    "autoprefixer": "postcss --use autoprefixer --no-map -o src/assets/css/build.css src/assets/css/build.css",
    "watch-autoprefixer": "nodemon -e scss -x \"yarn autoprefixer \""
  },
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "node-sass": "^4.9.1",
    "node-sass-import": "^2.0.1",
    "nodemon": "^1.17.5",
    "postcss": "^6.0.23",
    "postcss-cli": "^5.0.1",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.1"
  },
  "browserslist": [
    "last 3 versions",
    "ie >= 8",
    "iOS >= 6",
    "Android >= 3"
  ]
}
